<div class="container fix-footer" style='width: 600px;'>
  <h2 class="text-cent">S'identifier</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: 'E-mail' %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label: 'Mot de passe'  %>
      <%= f.input :remember_me, label: 'Se souvenir de moi',  as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "S'identifier", class:'bleu-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

